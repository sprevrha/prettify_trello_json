{
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome to Debug",
      "file": "${workspaceFolder}/${input:htmlFile}",
      "webRoot": "${workspaceFolder}"
    }
  ],
  "inputs": [
    {
      "type": "pickString",
      "id": "htmlFile",
      "description": "Select the HTML file to debug",
      "options": [
        "index.html"
      ]
    }
  ]
}